<div class="olho-form-container">
  <div class="olho-form container olho-div">
    <h2>Edit Restaurant</h2>
    <%= simple_form_for [@restaurant] do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name,
                    autofocus: true,
                    required: true,
                    input_html: { autocomplete: "name" }%>
        <%= f.input :address,
                    required: true %>
        <%= f.input :phone,
                    required: true %>
        <%= f.input :nbr_of_tables,
                    required: true %>
        <%= f.input :photo, as: :file, input_html: { class: 'photo_btn' }  %>

        <div class="form-actions">
          <%= f.button :submit, "Submit", class: 'olho-form-button olho-btn olho-green' %>
        </div>
      </div>
    <% end %>
  </div>
</div>