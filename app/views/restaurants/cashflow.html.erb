<div class="olho-form-container">
  <br>
  <div class="olho-div w-75 p-5">
    <h2> Restaurant Cash-Flow - Year 2021</h2>
    <%= line_chart [
      {name: "Revenue", data: @total_revenue, xtitle: "Month", ytitle: "Amount", label: "Revenue", prefix: "$", thousands: ".", decimal: ","},
      {name: "Expenses", data: @total_expenses, label: "Expenses", prefix: "$", thousands: ".", decimal: ","}
    ] %>
    <br>
  </div>
  <br>
  <br>
  <div class="olho-div w-75 p-5">
    <h5> Revenues </h5>
    <table class="table">
      <thead>
        <tr>
          <th scope="col" style = "width:120px"> REVENUE</th>
          <th scope="col" style = "width:100px"> Jan</th>
          <th scope="col" style = "width:100px"> Feb</th>
          <th scope="col" style = "width:100px"> Mar</th>
          <th scope="col" style = "width:100px"> Apr</th>
          <th scope="col" style = "width:100px"> May</th>
          <th scope="col" style = "width:100px"> Jun</th>
          <th scope="col" style = "width:100px"> Jul</th>
          <th scope="col" style = "width:100px"> Aug</th>
          <th scope="col" style = "width:100px"> Sep</th>
          <th scope="col" style = "width:100px"> Oct</th>
          <th scope="col" style = "width:100px"> Nov</th>
          <th scope="col" style = "width:100px"> Dec</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="col" style = "width:120px"> Food</th>
          <% for i in 1..12 do %>
            <td class="small" style="text-align:right;"> <%= number_to_currency(@cashflow_food[i]) %></td>
          <%end%>
        </tr>
        <tr>
          <th scope="col" style = "width:120px"> Beverage</th>
          <% for i in 1..12 do %>
            <td class="small" style="text-align:right;"> <%= number_to_currency(@cashflow_beverage[i]) %></td>
          <%end%>
        </tr>
        <tr>
          <th scope="col" style = "width:120px"> Dessert</th>
          <% for i in 1..12 do %>
            <td class="small" style="text-align:right;"> <%= number_to_currency(@cashflow_dessert[i]) %></td>
          <%end%>
        </tr>
        <tr style="background-color: darkblue; color:white">
          <th scope="col" style = "width:120px"> Total</th>
          <% for i in 1..12 do %>
            <th class="small" scope="col" style="text-align:right;"> <%= number_to_currency(@cashflow_food[i] + @cashflow_beverage[i] + @cashflow_dessert[i]) %></th>
          <%end%>
        </tr>
      </tbody>
      <thead>
        <tr>
          <th scope="col" style = "width:120px"> EXPENSES</th>
          <th scope="col" style = "width:100px"> Jan</th>
          <th scope="col" style = "width:100px"> Feb</th>
          <th scope="col" style = "width:100px"> Mar</th>
          <th scope="col" style = "width:100px"> Apr</th>
          <th scope="col" style = "width:100px"> May</th>
          <th scope="col" style = "width:100px"> Jun</th>
          <th scope="col" style = "width:100px"> Jul</th>
          <th scope="col" style = "width:100px"> Aug</th>
          <th scope="col" style = "width:100px"> Sep</th>
          <th scope="col" style = "width:100px"> Oct</th>
          <th scope="col" style = "width:100px"> Nov</th>
          <th scope="col" style = "width:100px"> Dec</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="col" style = "width:120px"> Payroll</th>
          <% for i in 1..12 do %>
            <td class="small" style="text-align:right; width:100px"> <%= number_to_currency(@cashflow_payroll[i]) %></td>
          <%end%>
        </tr>
        <tr>
          <th scope="col" style = "width:120px"> Utilities</th>
          <% for i in 1..12 do %>
            <td class="small" style="text-align:right; width:100px"> <%= number_to_currency(@cashflow_rent[i]) %></td>
          <%end%>
        </tr>
        <tr>
          <th scope="col" style = "width:120px"> Office</th>
          <% for i in 1..12 do %>
            <td class="small" style="text-align:right; width:100px"> <%= number_to_currency(@cashflow_office[i]) %></td>
          <%end%>
        </tr>
        <tr>
          <th scope="col" style = "width:120px"> Inputs</th>
          <% for i in 1..12 do %>
            <td class="small" style="text-align:right; width:100px"> <%= number_to_currency(@cashflow_input[i]) %></td>
          <%end%>
        </tr>
        <tr style="background-color: orange">
          <th scope="col" style = "width:120px"> Total</th>
          <% for i in 1..12 do %>
            <th class="small" scope="col" style="text-align:right; width:100px"> <%= number_to_currency(@cashflow_payroll[i] + @cashflow_rent[i] + @cashflow_office[i] + @cashflow_input[i]) %></th>
          <%end%>
        </tr>
      </tbody>
      <thead>
        <tr>
          <th scope="col" style="color: white width:120px"> Category</th>
          <th scope="col" style = "width:100px"> Jan</th>
          <th scope="col" style = "width:100px"> Feb</th>
          <th scope="col" style = "width:100px"> Mar</th>
          <th scope="col" style = "width:100px"> Apr</th>
          <th scope="col" style = "width:100px"> May</th>
          <th scope="col" style = "width:100px"> Jun</th>
          <th scope="col" style = "width:100px"> Jul</th>
          <th scope="col" style = "width:100px"> Aug</th>
          <th scope="col" style = "width:100px"> Sep</th>
          <th scope="col" style = "width:100px"> Oct</th>
          <th scope="col" style = "width:100px"> Nov</th>
          <th scope="col" style = "width:100px"> Dec</th>
        </tr>
      </thead>
      <tbody>
        <tr style="background-color: lightgreen">
          <th scope="col" style = "width:120px"> Total</th>
          <% for i in 1..12 do %>
            <th class="small" scope="col" style="text-align:right; width:100px"> <%= number_to_currency((@cashflow_food[i] + @cashflow_beverage[i] + @cashflow_dessert[i]) - (@cashflow_payroll[i] + @cashflow_rent[i] + @cashflow_office[i] + @cashflow_input[i])) %></th>
          <%end%>
        </tr>
      </tbody>
    </table>
        <div class="m-3">
      <%= link_to "back",  restaurant_path(@restaurant), class: "btn btn-back btn-sm" %>
    </div>

  </div>
  <br>

</div>