<div class="olho-form-container">
  <br>
  <div class="olho-div w-75 p-5">
    <h2 style="font-family: 'Gruppo', cursive;"> Restaurant Cash-Flow - Year 2021</h2>
    <%= line_chart [
      {name: "Revenue", data: @total_revenue, xtitle: "Month", ytitle: "Amount", label: "Revenue", prefix: "$", thousands: ".", decimal: ",", color: 'darkblue'},
      {name: "Expenses", data: @total_expenses, label: "Expenses", prefix: "$", thousands: ".", decimal: ",", color: 'orange'}
    ] %>
    <br>
  </div>
  <br>
  <br>
  <div class="olho-div w-75 p-5">
    <div style="overflow-x:auto;">
      <table class="table">
        <thead>
          <tr>
            <th scope="col"> REVENUE</th>
            <th scope="col" style="text-align:right"> Jan</th>
            <th scope="col" style="text-align:right"> Feb</th>
            <th scope="col" style="text-align:right"> Mar</th>
            <th scope="col" style="text-align:right"> Apr</th>
            <th scope="col" style="text-align:right"> May</th>
            <th scope="col" style="text-align:right"> Jun</th>
            <th scope="col" style="text-align:right"> Jul</th>
            <th scope="col" style="text-align:right"> Aug</th>
            <th scope="col" style="text-align:right"> Sep</th>
            <th scope="col" style="text-align:right"> Oct</th>
            <th scope="col" style="text-align:right"> Nov</th>
            <th scope="col" style="text-align:right"> Dec</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="col"> Food</th>
            <% for i in 1..12 do %>
              <td class="small" style="text-align:right;"> <%= number_to_currency(@cashflow_food[i]) %></td>
            <%end%>
          </tr>
          <tr>
            <th scope="col"> Beverage</th>
            <% for i in 1..12 do %>
              <td class="small" style="text-align:right;"> <%= number_to_currency(@cashflow_beverage[i]) %></td>
            <%end%>
          </tr>
          <tr>
            <th scope="col"> Dessert</th>
            <% for i in 1..12 do %>
              <td class="small" style="text-align:right;"> <%= number_to_currency(@cashflow_dessert[i]) %></td>
            <%end%>
          </tr>
          <tr style="background-color: darkblue; color:white">
            <th scope="col"> Total</th>
            <% for i in 1..12 do %>
              <th class="small" scope="col" style="text-align:right;"> <%= number_to_currency(@cashflow_food[i] + @cashflow_beverage[i] + @cashflow_dessert[i]) %></th>
            <%end%>
          </tr>
        </tbody>
        <thead>
          <tr>
            <th scope="col"> EXPENSES</th>
            <th scope="col" style="text-align:right"> Jan</th>
            <th scope="col" style="text-align:right"> Feb</th>
            <th scope="col" style="text-align:right"> Mar</th>
            <th scope="col" style="text-align:right"> Apr</th>
            <th scope="col" style="text-align:right"> May</th>
            <th scope="col" style="text-align:right"> Jun</th>
            <th scope="col" style="text-align:right"> Jul</th>
            <th scope="col" style="text-align:right"> Aug</th>
            <th scope="col" style="text-align:right"> Sep</th>
            <th scope="col" style="text-align:right"> Oct</th>
            <th scope="col" style="text-align:right"> Nov</th>
            <th scope="col" style="text-align:right"> Dec</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="col"> Payroll</th>
            <% for i in 1..12 do %>
              <td class="small" style="text-align:right"> <%= number_to_currency(@cashflow_payroll[i]) %></td>
            <%end%>
          </tr>
          <tr>
            <th scope="col"> Utilities</th>
            <% for i in 1..12 do %>
              <td class="small" style="text-align:right"> <%= number_to_currency(@cashflow_rent[i]) %></td>
            <%end%>
          </tr>
          <tr>
            <th scope="col"> Office</th>
            <% for i in 1..12 do %>
              <td class="small" style="text-align:right; width:100px"> <%= number_to_currency(@cashflow_office[i]) %></td>
            <%end%>
          </tr>
          <tr>
            <th scope="col"> Inputs</th>
            <% for i in 1..12 do %>
              <td class="small" style="text-align:right; width:100px"> <%= number_to_currency(@cashflow_input[i]) %></td>
            <%end%>
          </tr>
          <tr style="background-color: orange">
            <th scope="col"> Total</th>
            <% for i in 1..12 do %>
              <th class="small" scope="col" style="text-align:right; width:100px"> <%= number_to_currency(@cashflow_payroll[i] + @cashflow_rent[i] + @cashflow_office[i] + @cashflow_input[i]) %></th>
            <%end%>
          </tr>
        </tbody>
        <thead>
          <tr>
            <th scope="col" style="color: white"> Category</th>
            <th scope="col" style="text-align:right"> Jan</th>
            <th scope="col" style="text-align:right"> Feb</th>
            <th scope="col" style="text-align:right"> Mar</th>
            <th scope="col" style="text-align:right"> Apr</th>
            <th scope="col" style="text-align:right"> May</th>
            <th scope="col" style="text-align:right"> Jun</th>
            <th scope="col" style="text-align:right"> Jul</th>
            <th scope="col" style="text-align:right"> Aug</th>
            <th scope="col" style="text-align:right"> Sep</th>
            <th scope="col" style="text-align:right"> Oct</th>
            <th scope="col" style="text-align:right"> Nov</th>
            <th scope="col" style="text-align:right"> Dec</th>
          </tr>
        </thead>
        <tbody>
          <tr style="background-color: lightgreen">
            <th scope="col"> Total</th>
            <% for i in 1..12 do %>
              <th class="small" scope="col" style="text-align:right; width:100px"> <%= number_to_currency((@cashflow_food[i] + @cashflow_beverage[i] + @cashflow_dessert[i]) - (@cashflow_payroll[i] + @cashflow_rent[i] + @cashflow_office[i] + @cashflow_input[i])) %></th>
            <%end%>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="m-3">
      <%= link_to "back",  restaurant_path(@restaurant), class: "btn btn-back btn-sm" %>
    </div>

  </div>
  <br>
  <br>

</div>