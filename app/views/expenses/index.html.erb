<div class="olho-form-container">
  <div class="olho-div p-3">
    <h1 class="ml-2" style="font-family: 'Gruppo', cursive;"><strong>Expense List</strong></h1>
    
      <div class="container scrollit">

        <table class="table">
          <thead>
            <tr>
              <th scope="col">Description</th>
              <th scope="col">Amount</th>
              <th scope="col">Due Date</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <h2 class='text-center' style="font-family: 'Gruppo', cursive;"><strong>Payroll</strong></h2>
            <% if @payrolls.length > 0 %>
              <div class="container d-flex align-items-center justify-content-start flex-wrap">
                <% @payrolls.each do |expense| %>
                  <tr>
                    <td><%= expense.description %></td>
                    <td><%= number_to_currency(expense.amount) %></td>
                    <td><%= expense.due_date.strftime("%Y/%m/%d") %></td>
                    <td><%= link_to 'edit', edit_expense_path(expense), class: 'olho-btn-card olho-green' %></td>
                    <td><%= link_to 'delete', expense_path(expense), class: 'olho-btn-card olho-red', method: :delete, data: { confirm: "Are you sure?" } %></td>
                  </tr>
                <% end %>
              </div>
            <% end %>
          </tbody>
        </table>

